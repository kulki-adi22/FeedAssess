                tools:ignore="DuplicateIds,InvalidId" />

            <RadioGroup
                android:id="@+id/q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q2o1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="5" />

